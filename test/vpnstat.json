{
  "extension": {
	  "name": "Show Remote Access VPN Statistics",
	  "version": "0.3",
	  "description": "A SmartConsole Extension to show VPN User Statistics in a separate tab",
	  "author": "Danny Jung",
	  "email": "ndurov@gmail.com",
	  "product-url": "https://github.com/ndurov/CP-SmartExtension",
	  "provider": "github.com",
	  "license": "GPL",
	  "extension-version-requirements": {
		  "minimum-version": "1.2"
    }
  },
  "locations": [
    {
		"location": "details-pane",
		"relevant-types": ["gateways"],
		"ui-element": {
			"type": "tab",
			"caption": "VPN User Stats",
			"tooltip": "Display VPN User Statistics",
			"action": {
				"details-level": "full",
				"method": "get",
				"trigger-id": "gateways-details-pane",
				"url": "vpnstat.htm"
        }
      }
    }
  ],
	"requested-permissions": {
		"client": ["get-read-only-session", "run-read-only-commands"]
  }
}
